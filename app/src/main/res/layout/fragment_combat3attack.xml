<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#8E0000"
        android:backgroundTint="#3C7AAC"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:context=".ui.home.HomeFragment">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        </com.google.android.material.appbar.AppBarLayout>


        <TextView
            android:id="@+id/textView3"
            android:layout_width="414dp"
            android:layout_height="59dp"
            android:layout_marginTop="1dp"
            android:background="#D30000"
            android:backgroundTint="#AFABAB"
            android:text="Combat opposant x et y !                                  Que le meilleur gagne !"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="#000000"
            android:textIsSelectable="false"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView4" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="417dp"
            android:layout_height="237dp"
            android:layout_marginTop="69dp"
            android:src="@drawable/e9e38eywqayw_5q"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/button_attack2"
            android:layout_width="163dp"
            android:layout_height="125dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="98dp"
            android:layout_marginEnd="28dp"
            android:backgroundTint="#F44336"
            android:text="ATTAQUE2"
            android:textSize="24sp"
            app:iconTint="#FF0000"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/button_attack1"
            app:layout_constraintTop_toBottomOf="@+id/textView3" />

        <Button
            android:id="@+id/button_attack1"
            android:layout_width="163dp"
            android:layout_height="125dp"
            android:layout_marginStart="28dp"
            android:layout_marginTop="98dp"
            android:layout_marginEnd="20dp"
            android:backgroundTint="#F44336"
            android:text="ATTAQUE1"
            android:textSize="24sp"
            app:iconTint="#FF0000"
            app:layout_constraintEnd_toStartOf="@+id/button_attack2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView3" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>