<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeActivity">

    <Button
        android:id="@+id/buttonDeck"
        android:layout_width="229dp"
        android:layout_height="175dp"
        android:layout_marginTop="575dp"
        android:backgroundTint="#FF9800"
        android:radius="0dp"
        android:text="DECK"
        android:textSize="24sp"
        android:typeface="monospace"
        app:layout_constraintEnd_toStartOf="@+id/buttonCombat"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonCombat"
        android:layout_width="223dp"
        android:layout_height="175dp"
        android:layout_marginTop="575dp"
        android:backgroundTint="#F44336"
        android:radius="0dp"
        android:text="COMBATTRE"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textSize="24sp"
        android:typeface="monospace"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/buttonDeck"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="459dp"
        android:layout_height="756dp"
        android:layout_marginBottom="63dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/buttonCombat"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toEndOf="@+id/buttonDeck"
        app:srcCompat="@drawable/_6000346f_f50c_4b10_88ba_80f56348033d_2" />

</androidx.constraintlayout.widget.ConstraintLayout>