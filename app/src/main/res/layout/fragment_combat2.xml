<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#3DDD44"
        android:backgroundTint="#365C37"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:context=".ui.home.HomeActivity">


        <Button
            android:id="@+id/button_home"
            android:layout_width="151dp"
            android:layout_height="60dp"
            android:layout_marginStart="22dp"
            android:layout_marginEnd="29dp"
            android:layout_marginBottom="73dp"
            android:backgroundTint="#009688"
            android:text="DECK"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/button_item" />

        <Button
            android:id="@+id/button_attack"
            android:layout_width="200dp"
            android:layout_height="126dp"
            android:layout_marginStart="105dp"
            android:layout_marginTop="65dp"
            android:layout_marginEnd="106dp"
            android:backgroundTint="#F44336"
            android:text="ATTAQUE"
            android:textSize="30sp"
            app:iconTint="#00FFFFFF"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView3"
            app:strokeColor="#FF0000" />

        <Button
            android:id="@+id/button_item"
            android:layout_width="151dp"
            android:layout_height="60dp"
            android:layout_marginStart="29dp"
            android:layout_marginEnd="22dp"
            android:layout_marginBottom="73dp"
            android:backgroundTint="#FF9800"
            android:text="ITEM"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/button_home"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="420dp"
            android:layout_height="57dp"
            android:background="#D30000"
            android:backgroundTint="#AFABAB"
            android:text="Combat opposant x et y !                                  Que le meilleur gagne !"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="#000000"
            android:textIsSelectable="false"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView3" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="420dp"
            android:layout_height="245dp"
            android:layout_marginTop="60dp"
            android:src="@drawable/d5ynr9c_33aeebd0_1cd8_45d9_86fc_8431aa114534"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>